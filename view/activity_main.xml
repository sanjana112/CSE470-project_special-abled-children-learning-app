<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_back"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="46dp"                                        
        android:paddingRight="46dp">

        <Button
            android:id="@+id/btnFamily"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn_01"
            android:fontFamily="@font/big_sale_01"
            android:text="@string/home_button_en_1"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnExpression"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_01"
            android:fontFamily="@font/big_sale_01"
            android:text="@string/home_button_en_2"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGame"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_01"
            android:fontFamily="@font/big_sale_01"
            android:text="@string/home_button_en_3"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="26sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnBlog1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_01"
            android:fontFamily="@font/big_sale_01"
            android:text="Blog"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="26sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnForum"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_01"
            android:fontFamily="@font/big_sale_01"
            android:text="Forum"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="26sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:paddingLeft="46dp"
        android:paddingRight="46dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnLanguage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_02"
                android:fontFamily="@font/big_sale_01"
                android:text="EN"
                android:textColor="?attr/colorBackgroundFloating"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnExit"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_02"
                android:fontFamily="@font/big_sale_01"
                android:text="X"
                android:textColor="?attr/colorBackgroundFloating"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>