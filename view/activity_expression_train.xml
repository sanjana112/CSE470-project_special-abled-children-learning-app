<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_back"
    android:orientation="vertical"
    tools:context=".Expression.ExpressionTrain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="#34000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="Train Expression"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgGameEye0"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_happy_emoji"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Whose eye is this?"
                android:textSize="26sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#95FFFFFF"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/qusImgSound"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:src="@android:drawable/ic_btn_speak_now" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#95FFFFFF"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imgGameEye1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:padding="6dp"
                android:tag="_hello_"
                android:rotation="0"
                android:src="@drawable/ic_happy" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#95FFFFFF"
            android:layout_marginLeft="8dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imgGameEye2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:padding="6dp"
                android:tag="_hello_"
                android:rotation="0"
                android:src="@drawable/ic_happy" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/txtExpression1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Happy"
            android:textColor="#0F0F0F"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtExpression2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Happy"
            android:textColor="#0F0F0F"
            android:textAlignment="center" />



    </LinearLayout>

</LinearLayout>