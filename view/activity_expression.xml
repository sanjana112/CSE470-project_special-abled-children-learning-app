<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityExpression">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/game_back"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:background="#34000000"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/app_font"
                android:text="Expression"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNeutral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="#56000000"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:text="Neutral"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtLaugh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#56000000"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:text="Laugh"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHappy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="#56000000"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:text="Happy"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtSad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#56000000"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:text="Sad"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtAngry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="#56000000"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:text="Angry"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtFear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#56000000"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:text="Fear"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSurprised"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="#56000000"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:text="Surprised"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtDisguested"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#56000000"
                android:fontFamily="@font/app_font"
                android:gravity="center"
                android:text="Disguested"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>