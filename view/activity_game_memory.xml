<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_back"
    android:orientation="vertical"
    tools:context=".Game.GameMemory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="#34000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="Memory Game"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQuestion11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Where is your "
            android:textColor="#FFF"
            android:textSize="26sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#95FFFFFF"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/qusImgSound"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@android:drawable/ic_btn_speak_now" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#95FFFFFF"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/qusImage11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="6dp"
                android:tag="_hello_"
                android:src="@drawable/ic_angry" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#95FFFFFF"
            android:layout_marginLeft="8dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/qusImage12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:tag="_hello_"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_angry" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:padding="16dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#95FFFFFF"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/qusImage13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:padding="6dp"
                android:tag="_hello_"
                android:src="@drawable/ic_angry" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardBackgroundColor="#95FFFFFF"
            android:layout_marginLeft="8dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/qusImage14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:tag="_hello_"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_angry" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>