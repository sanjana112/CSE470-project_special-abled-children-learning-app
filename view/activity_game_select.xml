<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_back"
    android:orientation="vertical"
    tools:context=".ActivityGameSelect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="#34000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="Select Game"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="#84000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layoutGameTrainYourSelf">

        <TextView
            android:id="@+id/txtGameOption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="Train My Self"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="#84000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layoutGame1">

        <TextView
            android:id="@+id/txtGameOption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="Find Game"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="#84000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/layoutGame2">

        <TextView
            android:id="@+id/txtGameOption3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="Memory Game"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="#84000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/layoutGame3">

        <TextView
            android:id="@+id/txtGameOption4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="Rotate Game"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:background="#84000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/layoutGame4">

        <TextView
            android:id="@+id/txtGameOption5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/app_font"
            android:text="Match Eye"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="26sp" />
    </LinearLayout>

</LinearLayout>